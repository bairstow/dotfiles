# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        #bindsym h resize shrink width 10 px or 10 ppt
        #bindsym t resize grow height 10 px or 10 ppt
        #bindsym n resize shrink height 10 px or 10 ppt
        #bindsym s resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

set $displayMode "Display mode [m]onitor [u]hd [t]v [w]ide [p]b [k]wm"

mode $displayMode {
        # bind execution of different display modes
        bindsym m exec "~/.config/i3/scripts/monitor-only.sh"; mode "default"
        bindsym u exec "~/.config/i3/scripts/uhd.sh"; mode "default"
        bindsym t exec "~/.config/i3/scripts/home-tv.sh"; mode "default"
        bindsym w exec "~/.config/i3/scripts/home-widescreen.sh"; mode "default"
        bindsym k exec "~/.config/i3/scripts/office-kwm-monitor.sh"; mode "default"
        bindsym p exec "~/.config/i3/scripts/poewerb.sh"; mode "default"

        # bind arrow keys to shift focused container between monitors
        bindsym Left move container to output left
        bindsym Down move container to output down
        bindsym Up move container to output up
        bindsym Right move container to output right

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+x mode $displayMode

bindsym $mod+g exec "~/.config/i3/scripts/generic-workspace.sh"

set $configMode "Config [c]a-terminal"

mode $configMode {
        bindsym c exec "~/.config/i3/scripts/ca-terminal.sh"; mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+c mode $configMode

set $keyboardMode "Keyboard Layout: [d]vorak [u]s [x]modmap"

mode $keyboardMode {
        bindsym d exec "setxkbmap dvorak && xmodmap ~/.xmodmap"; mode "default"
        bindsym u exec "setxkbmap us && xmodmap ~/.xmodmap"; mode "default"
        bindsym x exec "xmodmap ~/.xmodmap"; mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+b mode $keyboardMode

set $notesMode "Notes mode [i]3 [b]rowser [e]macs [c]lojure [r]ecent"

mode $notesMode {
        bindsym i exec "gnome-terminal --window-with-profile=NOTES --execute mdless ~/.dotfiles/notes/i3.md"; mode "default"
        bindsym b exec "gnome-terminal --window-with-profile=NOTES --execute mdless ~/.dotfiles/notes/browser.md"; mode "default"
        bindsym e exec "gnome-terminal --window-with-profile=NOTES --execute mdless ~/.dotfiles/notes/emacs.md"; mode "default"
        bindsym c exec "gnome-terminal --window-with-profile=NOTES --execute mdless ~/.dotfiles/notes/clojure.md"; mode "default"
        bindsym r exec "gnome-terminal --window-with-profile=NOTES --execute mdless ~/.dotfiles/notes/recent.md"; mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+n mode $notesMode

set $locker i3lock && sleep 1
set $systemMode "System mode (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown"

mode $systemMode {
        bindsym l exec --no-startup-id $locker, mode "default"
        bindsym e exec --no-startup-id i3-msg exit, mode "default"
        bindsym s exec --no-startup-id $locker && systemctl suspend, mode "default"
        bindsym h exec --no-startup-id $locker && systemctl hibernate, mode "default"
        bindsym r exec --no-startup-id systemctl reboot, mode "default"
        bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+s mode $systemMode

